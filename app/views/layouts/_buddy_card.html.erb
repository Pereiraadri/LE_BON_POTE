<div class="bg-white p-4 mb-4 rounded-lg shadow-sm">
  <div class="flex items-center justify-between mb-2">
    <div class="flex items-center space-x-3">
      <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
        <i class="fas fa-user text-gray-400"></i>
      </div>
      <div>
        <h3 class="font-medium"><%= buddy.name %></h3>
        <p class="text-sm text-pink-500"><%= buddy.skill %></p>
      </div>
    </div>
    <div class="flex items-center">
      <span class="text-sm mr-1">4.3</span>
      <i class="fas fa-star text-green-500 text-sm"></i>
    </div>
  </div>

  <div class="flex justify-between items-center mt-2">
    <div class="flex items-center space-x-2">
      <i class="fas fa-euro-sign text-gray-600"></i>
      <span class="text-gray-600"><%= buddy.price %></span>
    </div>
    <div class="flex space-x-2">
      <a href="#" class="text-pink-500">
        <i class="fab fa-instagram"></i>
      </a>
    </div>
  </div>
</div>
