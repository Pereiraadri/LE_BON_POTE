<h1 class ="index"> My bookings </h1>

<div class="container-bookings">
  <div class="column">
    <% @bookings.each do |booking| %>
      <div class="booking-card col-12">
        <div class="card-header">
          <div class="buddy-name">
            <%= "#{booking.buddy.first_name} #{booking.buddy.last_name}" %>
          </div>
          <div class="buddy-skill">
            <%= booking.buddy.skill %>
          </div>
        </div>
        <div class="card-image">
          <%= image_tag booking.buddy.image, class: "image-booking-index", alt: "#{booking.buddy.first_name} #{booking.buddy.last_name}" %>
        </div>
        <div class="card-dates">
          <p>
            <i class="fa fa-calendar-alt"></i>
            <strong>Start date:</strong> <%= booking.start_date.strftime("%d/%m/%Y") %></p>
          <p>
            <i class="fa fa-calendar-alt"></i>
            <strong>End date:</strong> <%= booking.end_date.strftime("%d/%m/%Y") %></p>
        </div>
        <div class="card-price">
          <p><strong>Price:</strong> <%= "#{booking.buddy.price}â‚¬"%></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
