<h1>All Buddies</h1>

<%= link_to 'New Buddy', new_buddy_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Skill</th>
      <th>Description</th>
      <th>Actions</th>
      <th>Prix</th>
    </tr>
  </thead>
  <tbody>
    <% @buddies.each do |buddy| %>
      <div class="card" style="width: 18rem;">
      <div class="card-buddy-image">
      <%= cl_image_tag buddy.image.key, height: 300, width: 300, crop: :fill, class: "card-img-top" %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= buddy.first_name %></h5>
        <h5 class="card-skill"><%= buddy.skill %></h5>
        <p class="card-text"><%= buddy.description %></p>
        <%= link_to 'Show', buddy_path(buddy), class: 'btn btn-info' %>
        <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
      </div>
    </div>



        </td>
      </tr>
    <% end %>
  </tbody>
</table>
