<h1>All Buddies</h1>

<%= link_to 'New Buddy', new_buddy_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Skill</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @buddies.each do |buddy| %>
      <tr>
        <td><%= buddy.first_name %></td>
        <td><%= buddy.last_name %></td>
        <td><%= buddy.email %></td>
        <td><%= buddy.address %></td>
        <td><%= buddy.skill %></td>
        <td><%= buddy.description %></td>
        <td>
          <%= link_to 'Show', buddy_path(buddy), class: 'btn btn-info' %> |
          <%= link_to 'Edit', edit_buddy_path(buddy), class: 'btn btn-warning' %> |
          <%= link_to 'Delete', buddy_path(buddy), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
