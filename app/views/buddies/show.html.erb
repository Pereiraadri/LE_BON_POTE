<header>
<%= image_tag "logo.png", id:"logo", alt: "logo", class: "logo-top-right"%>

</header>
<div class="container mt-4">
  <h1 class="details-buddy mb-4">Détails du buddy</h1>

    <div class="card-body">
      <% if @buddy.image.attached? %>
    <div class="text-center mb-4">
          <!-- Image responsive -->
      <%= image_tag @buddy.image, class: "image-buddy-show", alt: "#{@buddy.first_name} #{@buddy.last_name}"%>
    </div>
    <% else %>
    <div class="text-center mb-4">
      <%= image_tag "default_image.png", class: "image-buddy-show", alt: "Default Buddy"%>
    </div>
    <% end %>

      <!-- Nom et Skill côte à côte -->
      <div class="container">
      <div class="d-flex justify-content-between align-items-center sm-3">
        <p class="buddy-name"><strong>Buddy Name:</strong> <%= @buddy.first_name %></p>
        <p class="buddy-skill"><strong>Skill:</strong> <%= @buddy.skill %></p>
      </div>
      </div>

  <div class="description-container mb-3">
    <p><strong>Description:</strong>
    <p><%= @buddy.description %></p>
  </div>
</div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <!-- Prix -->
        <p class="mb-0 fw-bold" style="font-size: 1.2rem; color: #333;">
          € <%= @buddy.price %>
        </p>


        <!-- Bouton "Book Your Buddy" -->
        <button class="link-button btn btn-pink text-white fw-bold py-2 px-4"
                style="background-color: #f48fb1; border: none; border-radius: 8px;">
          <%= link_to "Book your buddy", new_buddy_booking_path(@buddy)%>
        </button>
      </div>
    </div>
</div>
